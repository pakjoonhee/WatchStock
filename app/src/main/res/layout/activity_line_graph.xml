<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:contentDescription="@string/line_graph">

    <TextView
        android:id="@+id/chart_legend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/average_price"
        android:textSize="20sp"
        android:textColor="#9fb7cc"
        android:gravity="center"
        android:layout_marginStart="35dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/chart_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:includeFontPadding="false"
        android:textColor="#ffffff"
        android:layout_below="@+id/chart_legend"
        android:layout_marginStart="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upOrDown"/>

    <com.db.chart.view.LineChartView
        xmlns:chart="http://schemas.android.com/apk/res-auto"
        android:id="@+id/linechart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>